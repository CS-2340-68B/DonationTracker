<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="16dp"
    android:minHeight="16dp">
    
    <LinearLayout
        android:id="@+id/searchLinearLayout"
        android:layout_marginTop=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/searchbar"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search For..."
            android:singleLine="true" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:text="Search"></Button>

    </LinearLayout>
    


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/searchRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchLinearLayout"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="105dp">

        <RadioButton
            android:id="@+id/itemSearchAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Search Item in All Locations" />

        <RadioButton
            android:id="@+id/catSearchAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Search Category in All Locations" />

        <RadioButton
            android:id="@+id/itemSearchLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Search Item in Specific Location" />

        <RadioButton
            android:id="@+id/catSearchLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Search Category in Specific Location" />
    </RadioGroup>



</RelativeLayout>