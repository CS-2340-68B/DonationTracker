<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.MainPage"
    android:background="#fff">

    <Button
        android:id="@+id/search"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_marginBottom="228dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageButton4"
        app:layout_constraintStart_toStartOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:layout_constraintVertical_bias="0.911" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="286dp"
        android:layout_height="144dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        app:srcCompat="@drawable/donapp" />

    <Button
        android:id="@+id/donationLocationMapbutton"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/donationlocationmap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/donationLocationListButton"
        app:layout_constraintStart_toStartOf="@+id/donationLocationListButton"
        app:layout_constraintTop_toBottomOf="@+id/donationLocationListButton"
        app:layout_constraintVertical_bias="0.058" />

    <!--<item-->
        <!--android:id = "@+id/logout"-->
        <!--android:icon = "@drawable/loginbutton"-->
        <!--android:title = "Logout"-->
        <!--android:showAsAction="always" />-->


    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/donationLocationListButton"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_marginBottom="160dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/donationlocationlist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/donationCategoryButton"
        android:layout_width="272dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/donationcategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/donationLocationMapbutton"
        app:layout_constraintStart_toStartOf="@+id/donationLocationMapbutton"
        app:layout_constraintTop_toBottomOf="@+id/donationLocationMapbutton"
        app:layout_constraintVertical_bias="0.125" />

</android.support.constraint.ConstraintLayout>