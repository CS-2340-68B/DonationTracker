<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340_68b.donationtracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controllers.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Login.Login" />
        <activity android:name=".Controllers.MainPage" />
        <activity android:name=".Controllers.Register.Register" />
        <activity android:name=".Controllers.Register.ForgetPassword" />
        <activity android:name=".Controllers.Register.ResetPassword" />
        <activity android:name=".Controllers.Location.LocationListView" />
        <activity android:name=".Controllers.UserProfile" />
        <activity android:name=".Controllers.Location.LocationDetail" />
        <activity android:name=".Controllers.Location.LocationSet"/>
        <activity android:name=".Controllers.Location.DonationDetail"/>
    </application>

</manifest>